[user]
  name = Jan De Poorter
  email = jan@defv.be
[alias]
  co = checkout
  st = status
  ci = commit
  latest = for-each-ref --sort=-committerdate refs/heads --format='%(committerdate:short) %(refname:short)'
[diff]
  # For Github-style word diffs
  wordRegex = [^[:space:]]
	tool = gvimdiff
[color]
  ui = auto
[core]
  excludesfile = ~/.gitignore
  attributesfile = ~/.gitattributes
  pager = less -S
[diff "ruby"]
  funcname = "^ *\\(\\(def\\) .*\\)"
[diff "image"]
  textconv = identify
[branch]
  autosetuprebase = always
[github]
  user = defv
[push]
  default = tracking
[url "git@git.sumocoders.be:"]
  insteadOf = sumo:
[init]
  templatedir = ~/.git_template
[merge]
  summary = true
